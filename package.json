{
  "name": "optichannel",
  "version": "0.1.0",
  "description": "Gasless options trading protocol built on Yellow Network state channels",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:run": "vitest run",
    "test:connection": "tsx src/test-connection.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "options",
    "defi",
    "yellow-network",
    "state-channels",
    "ethereum"
  ],
  "author": "Aayush",
  "license": "MIT",
  "dependencies": {
    "@erc7824/nitrolite": "^0.5.3",
    "@pythnetwork/hermes-client": "^1.0.0",
    "dotenv": "^16.4.0",
    "viem": "^2.0.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
